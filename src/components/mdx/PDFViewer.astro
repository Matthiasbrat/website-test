---
interface Props {
  src: string;
  height?: string;
  title?: string;
}

const { src, height = '600px', title } = Astro.props;
---

<div class="my-6">
  {title && (
    <div class="flex items-center justify-between mb-2">
      <p class="text-sm font-medium text-text-secondary">{title}</p>
      <a
        href={src}
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm text-accent hover:text-accent-hover flex items-center gap-1"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
        Open in new tab
      </a>
    </div>
  )}
  <div class="rounded-lg overflow-hidden border border-border-subtle" style={`height: ${height}`}>
    <iframe
      src={src}
      class="w-full h-full"
      title={title || 'PDF Document'}
    />
  </div>
</div>
