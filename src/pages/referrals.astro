---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const referrals = await getCollection('referrals');
---

<BaseLayout title="Referrals" description="People I recommend working with">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <header class="mb-12">
      <h1 class="text-4xl font-bold text-text-heading mb-4">Referrals</h1>
      <p class="text-text-secondary text-lg">
        People I've had the pleasure of working with and highly recommend.
      </p>
    </header>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {referrals.map((referral) => (
        <div class="glass-card p-6 card-hover">
          <div class="flex items-start gap-4 mb-4">
            {referral.data.avatar ? (
              <img
                src={referral.data.avatar}
                alt={referral.data.name}
                class="w-16 h-16 rounded-full object-cover"
              />
            ) : (
              <div class="w-16 h-16 rounded-full bg-bg-tertiary flex items-center justify-center text-2xl font-bold text-text-secondary">
                {referral.data.name.charAt(0)}
              </div>
            )}
            <div class="flex-1 min-w-0">
              <h2 class="font-semibold text-text-heading text-lg truncate">
                {referral.data.name}
              </h2>
              <p class="text-sm text-text-secondary">
                {referral.data.title}
              </p>
              {referral.data.company && (
                <p class="text-sm text-accent">
                  {referral.data.company}
                </p>
              )}
            </div>
          </div>

          <p class="text-text-secondary text-sm mb-4 line-clamp-3">
            {referral.data.description}
          </p>

          <div class="flex items-center gap-3">
            {referral.data.website && (
              <a
                href={referral.data.website}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-secondary hover:text-accent transition-colors"
                title="Website"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              </a>
            )}
            {referral.data.linkedin && (
              <a
                href={referral.data.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-secondary hover:text-accent transition-colors"
                title="LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              </a>
            )}
            {referral.data.github && (
              <a
                href={referral.data.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-secondary hover:text-accent transition-colors"
                title="GitHub"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>

    {referrals.length === 0 && (
      <div class="text-center py-12">
        <p class="text-text-secondary">No referrals yet.</p>
      </div>
    )}
  </div>
</BaseLayout>
