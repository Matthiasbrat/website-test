---
import { siteConfig } from '../../site.config';
import ThemeSwitcher from './ThemeSwitcher.astro';
import SearchButton from './SearchButton.astro';

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 backdrop-blur-md bg-bg-primary/80 border-b border-border-subtle">
  <nav class="max-w-6xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo / Site Title -->
      <a href="/" class="text-xl font-bold text-text-heading hover:text-accent transition-colors">
        {siteConfig.title}
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {siteConfig.navigation.map((item) => (
          <a
            href={item.href}
            class:list={[
              'nav-link text-text-primary',
              { 'active': currentPath.startsWith(item.href) }
            ]}
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Right side controls -->
      <div class="flex items-center gap-2">
        <SearchButton />
        <ThemeSwitcher />

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-lg hover:bg-bg-hover transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2">
      <div class="flex flex-col gap-1">
        {siteConfig.navigation.map((item) => (
          <a
            href={item.href}
            class:list={[
              'px-4 py-2 rounded-lg transition-colors',
              currentPath.startsWith(item.href)
                ? 'bg-bg-active text-accent'
                : 'hover:bg-bg-hover'
            ]}
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu on navigation
  document.addEventListener('astro:page-load', () => {
    mobileMenu?.classList.add('hidden');
  });
</script>
