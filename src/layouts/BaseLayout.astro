---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ClientRouter from '../components/ClientRouter.astro';
import ThemeScript from '../components/ThemeScript.astro';
import { siteConfig } from '../../site.config';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  article?: boolean;
  publishedTime?: Date;
  modifiedTime?: Date;
}

const {
  title,
  description = siteConfig.description,
  ogImage = siteConfig.seo.defaultOgImage,
  article = false,
  publishedTime,
  modifiedTime,
} = Astro.props;

const pageTitle = title ? `${title} | ${siteConfig.title}` : siteConfig.title;
const canonicalURL = new URL(Astro.url.pathname, siteConfig.baseUrl);
const ogImageURL = new URL(ogImage, siteConfig.baseUrl);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={description} />
    <meta name="author" content={siteConfig.author.name} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content={siteConfig.title} />

    {article && publishedTime && (
      <meta property="article:published_time" content={publishedTime.toISOString()} />
    )}
    {article && modifiedTime && (
      <meta property="article:modified_time" content={modifiedTime.toISOString()} />
    )}

    <!-- Twitter -->
    <meta property="twitter:card" content={siteConfig.seo.twitterCard} />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />
    {siteConfig.seo.twitterHandle && (
      <meta property="twitter:creator" content={siteConfig.seo.twitterHandle} />
    )}

    <!-- Prevent flash of unstyled theme -->
    <ThemeScript />

    <!-- Client-side router -->
    <ClientRouter />

    <!-- Analytics -->
    {siteConfig.analytics.googleMeasurementId && (
      <>
        <script
          async
          src={`https://www.googletagmanager.com/gtag/js?id=${siteConfig.analytics.googleMeasurementId}`}
        />
        <script define:vars={{ gaId: siteConfig.analytics.googleMeasurementId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag() {
            dataLayer.push(arguments);
          }
          gtag('js', new Date());
          gtag('config', gaId);
        </script>
      </>
    )}
  </head>
  <body class="min-h-screen flex flex-col bg-bg-primary text-text-primary">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
