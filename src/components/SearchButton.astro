---
// Search button that opens the search modal
---

<button
  id="search-btn"
  class="p-2 rounded-lg hover:bg-bg-hover transition-colors flex items-center gap-2"
  aria-label="Search"
  title="Search (Cmd+K)"
>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
  </svg>
  <kbd class="hidden sm:inline-flex items-center gap-1 px-2 py-0.5 text-xs font-mono bg-bg-tertiary rounded border border-border-subtle">
    <span class="text-xs">⌘</span>K
  </kbd>
</button>

<!-- Search Modal -->
<div
  id="search-modal"
  class="hidden fixed inset-0 z-[100] flex items-start justify-center pt-[10vh] px-4"
>
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-bg-primary/80 backdrop-blur-sm" id="search-backdrop"></div>

  <!-- Modal content -->
  <div class="relative w-full max-w-2xl bg-bg-secondary rounded-xl border border-border-default shadow-2xl">
    <!-- Search input -->
    <div class="flex items-center gap-3 px-4 py-3 border-b border-border-subtle">
      <svg class="w-5 h-5 text-text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <input
        type="text"
        id="search-input"
        class="flex-1 bg-transparent outline-none text-text-primary placeholder-text-secondary"
        placeholder="Search posts and docs..."
        autocomplete="off"
      />
      <kbd class="px-2 py-1 text-xs font-mono bg-bg-tertiary rounded border border-border-subtle text-text-secondary">
        ESC
      </kbd>
    </div>

    <!-- Results -->
    <div id="search-results" class="max-h-[60vh] overflow-y-auto p-2">
      <div class="px-4 py-8 text-center text-text-secondary">
        Start typing to search...
      </div>
    </div>

    <!-- Footer -->
    <div class="flex items-center gap-4 px-4 py-2 border-t border-border-subtle text-xs text-text-secondary">
      <span class="flex items-center gap-1">
        <kbd class="px-1.5 py-0.5 bg-bg-tertiary rounded border border-border-subtle">↑↓</kbd>
        to navigate
      </span>
      <span class="flex items-center gap-1">
        <kbd class="px-1.5 py-0.5 bg-bg-tertiary rounded border border-border-subtle">↵</kbd>
        to select
      </span>
    </div>
  </div>
</div>

<script>
  const searchBtn = document.getElementById('search-btn');
  const searchModal = document.getElementById('search-modal');
  const searchBackdrop = document.getElementById('search-backdrop');
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const searchResults = document.getElementById('search-results');

  let debounceTimer: number;

  function openSearch() {
    searchModal?.classList.remove('hidden');
    searchInput?.focus();
    document.body.style.overflow = 'hidden';
  }

  function closeSearch() {
    searchModal?.classList.add('hidden');
    document.body.style.overflow = '';
    if (searchInput) searchInput.value = '';
    if (searchResults) {
      searchResults.innerHTML = '<div class="px-4 py-8 text-center text-text-secondary">Start typing to search...</div>';
    }
  }

  async function performSearch(query: string) {
    if (!query.trim()) {
      if (searchResults) {
        searchResults.innerHTML = '<div class="px-4 py-8 text-center text-text-secondary">Start typing to search...</div>';
      }
      return;
    }

    if (searchResults) {
      searchResults.innerHTML = '<div class="px-4 py-8 text-center text-text-secondary">Searching...</div>';
    }

    try {
      const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
      const results = await response.json();

      if (results.length === 0) {
        if (searchResults) {
          searchResults.innerHTML = '<div class="px-4 py-8 text-center text-text-secondary">No results found</div>';
        }
        return;
      }

      if (searchResults) {
        searchResults.innerHTML = results.map((result: any, index: number) => `
          <a
            href="${result.url}"
            class="search-result block px-4 py-3 rounded-lg hover:bg-bg-hover transition-colors ${index === 0 ? 'bg-bg-hover' : ''}"
            data-index="${index}"
          >
            <div class="font-medium text-text-primary">${result.title}</div>
            <div class="text-sm text-text-secondary mt-1 line-clamp-2">${result.excerpt}</div>
            <div class="flex items-center gap-2 mt-2">
              <span class="px-2 py-0.5 text-xs rounded bg-bg-tertiary text-text-secondary">${result.type}</span>
              <span class="text-xs text-text-secondary">${result.topic}</span>
            </div>
          </a>
        `).join('');
      }
    } catch (error) {
      if (searchResults) {
        searchResults.innerHTML = '<div class="px-4 py-8 text-center text-text-secondary">Search unavailable</div>';
      }
    }
  }

  // Open search
  searchBtn?.addEventListener('click', openSearch);

  // Close search
  searchBackdrop?.addEventListener('click', closeSearch);

  // Keyboard shortcuts
  document.addEventListener('keydown', (e) => {
    // Cmd/Ctrl + K to open
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      openSearch();
    }

    // Escape to close
    if (e.key === 'Escape' && !searchModal?.classList.contains('hidden')) {
      closeSearch();
    }

    // Arrow navigation
    if (!searchModal?.classList.contains('hidden')) {
      const results = searchResults?.querySelectorAll('.search-result');
      const activeIndex = Array.from(results || []).findIndex(r => r.classList.contains('bg-bg-hover'));

      if (e.key === 'ArrowDown' && results) {
        e.preventDefault();
        const nextIndex = Math.min(activeIndex + 1, results.length - 1);
        results.forEach((r, i) => r.classList.toggle('bg-bg-hover', i === nextIndex));
        results[nextIndex]?.scrollIntoView({ block: 'nearest' });
      }

      if (e.key === 'ArrowUp' && results) {
        e.preventDefault();
        const prevIndex = Math.max(activeIndex - 1, 0);
        results.forEach((r, i) => r.classList.toggle('bg-bg-hover', i === prevIndex));
        results[prevIndex]?.scrollIntoView({ block: 'nearest' });
      }

      if (e.key === 'Enter' && results) {
        e.preventDefault();
        const active = results[activeIndex] as HTMLAnchorElement;
        if (active) {
          window.location.href = active.href;
          closeSearch();
        }
      }
    }
  });

  // Search input
  searchInput?.addEventListener('input', (e) => {
    clearTimeout(debounceTimer);
    debounceTimer = setTimeout(() => {
      performSearch((e.target as HTMLInputElement).value);
    }, 200) as unknown as number;
  });
</script>
